<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.moa.financial.consultant.DetailSalaryFragment">
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            tools:context="ro.moa.financial.consultant.SalaryFragment"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/detailsWelcome"
                android:id="@+id/textView5"
                android:autoText="false"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:background="#ffff4961"
                android:elegantTextHeight="true"
                android:linksClickable="false"
                android:minLines="3"
                android:textAlignment="center"
                android:textStyle="bold"
                android:focusable="true"/>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/salary_gross_description"
                        android:layout_weight="2"/>

                    <EditText
                        android:id="@+id/grossSalaryResults"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:minWidth="60dp"
                        android:layout_weight="2"
                        android:text="0"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/textView21"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="@string/grossSalaryDefinition"/>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/CASSView"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/CASS_description"
                        android:layout_weight="2"/>

                    <EditText
                        android:id="@+id/CASSAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:minWidth="60dp"
                        android:layout_weight="2"
                        android:text="0"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/healthCareInfoDefinition"
                        android:id="@+id/textView22"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"/>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/CASView"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/CAS_description"
                        android:layout_weight="2"/>

                    <EditText
                        android:id="@+id/CASAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:minWidth="60dp"
                        android:layout_weight="2"
                        android:text="0"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Represents 10.5% of the norm, only if the freelancer is not an employee"
                        android:id="@+id/textView23"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"/>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/UnemploymentView"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/unemploymentDescription"
                        android:layout_weight="2"/>

                    <EditText
                        android:id="@+id/UnemploymentAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:minWidth="60dp"
                        android:layout_weight="2"
                        android:text="0"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/unemploymentDescription"
                        android:id="@+id/textView24"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Deductibles"
                        android:id="@+id/textView9"
                        android:singleLine="false"
                        android:layout_weight="2"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/taxDeductibleAmount"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/deductibleInfoDefinition"
                        android:id="@+id/textView27"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"/>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Taxes"
                        android:id="@+id/textView8"
                        android:password="false"
                        android:layout_weight="2"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/taxesAmountSalary"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/totalTaxes"
                        android:id="@+id/textView26"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/salary_net_description"
                        android:layout_weight="2"/>

                    <EditText
                        android:id="@+id/netSalaryResults"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_weight="2"
                        android:minWidth="60dp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/netSalaryDefinition"
                        android:id="@+id/textView25"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Lunch Tickets Amount"
                        android:id="@+id/textView10"
                        android:layout_weight="2"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/lunchAmount"
                        android:layout_column="1"
                        android:layout_weight="2"
                        android:text="0"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="@string/lunchDefinition"
                        android:id="@+id/textView28"
                        android:background="#c8ffefbd"
                        android:layout_weight="4"
                        android:gravity="center"/>

                </TableRow>

            </TableLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:id="@+id/Change"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </FrameLayout>
</ScrollView>